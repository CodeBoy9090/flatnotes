<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <x:String x:Key="AppName">Flat Notes</x:String>

    <Color x:Key="AppMainColor">#ffbb00</Color>
    <Color x:Key="AppMainDarkenColor">#f99f00</Color>
    <Color x:Key="AppMainForegroundColor">White</Color><!--664B00-->
    <Color x:Key="PhoneAccentColor">#ffbb00</Color>

    <SolidColorBrush x:Key="AppMainBrush" Color="{ThemeResource AppMainColor}"/>
    <SolidColorBrush x:Key="AppMainDarkenBrush" Color="{ThemeResource AppMainDarkenColor}"/>
    <SolidColorBrush x:Key="AppMainForegroundBrush" Color="{StaticResource AppMainForegroundColor}"/>
    <SolidColorBrush x:Key="PhoneAccentBrush" Color="{ThemeResource AppMainColor}"/>

    <SolidColorBrush x:Key="AppSplashScreenBrush" Color="#56007f"/><!--263646-->
    <SolidColorBrush x:Key="ProgressBarIndeterminateForegroundThemeBrush" Color="{ThemeResource AppMainColor}"/>

    <SolidColorBrush x:Key="ToggleSwitchCurtainBackgroundThemeBrush" Color="{ThemeResource AppMainColor}"/>
    <SolidColorBrush x:Key="SliderTrackDecreaseBackgroundThemeBrush" Color="{ThemeResource AppMainColor}"/>

    <SolidColorBrush x:Key="PhoneDarkLowBrush" Color="#20000000"/>
    <SolidColorBrush x:Key="PhoneDarkMidBrush" Color="#70000000"/>
    
    <SolidColorBrush x:Key="AppNoteForegroundBrush" Color="#C0000000"/>
    <SolidColorBrush x:Key="AppNoteCommandBarForegroundThemeBrush" Color="Black"/>
            
    <SolidColorBrush x:Key="TextBoxFocusedBackgroundThemeBrush" Color="Transparent"/>
    <SolidColorBrush x:Key="TextBoxPlaceholderTextThemeBrush" Color="#70000000"/>
    <SolidColorBrush x:Key="TextBoxDisabledForegroundThemeBrush" Color="#70000000"/>
    <SolidColorBrush x:Key="TextBlockDisabledForegroundThemeBrush" Color="#70000000"/>

    <SolidColorBrush x:Key="CommandBarBackgroundThemeBrush" Color="{ThemeResource AppMainColor}"/>
    <SolidColorBrush x:Key="CommandBarForegroundThemeBrush" Color="{StaticResource AppMainForegroundColor}"/>

    <Style TargetType="CommandBar">
        <Setter Property="RequestedTheme" Value="Dark"/>
        <Setter Property="Background" Value="{StaticResource CommandBarBackgroundThemeBrush}"/>
        <!--<Setter Property="Foreground" Value="{StaticResource CommandBarForegroundThemeBrush}"/>-->
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
    </Style>

    <Style TargetType="ListViewItem">
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
    </Style>

    <x:Double x:Key="EmptyNotesMessageFontSize">24</x:Double>

    <Style TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
    </Style>

    <Style x:Key="NavigationBackButtonNormalStyle" TargetType="Button">
        <Setter Property="Visibility" Value="Visible"/>
    </Style>

    <DataTemplate x:Key="HeaderTemplate">
        <TextBlock Margin="0,12,0,0" Text="{Binding}" FontSize="34.14"/>
    </DataTemplate>
</ResourceDictionary>
